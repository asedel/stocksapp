<div class="ui padded raised segment">
  <div class="ui items">
    <div class="item">
      <div class="image">
        <img src="<%= stock_image(@stock) %>">
      </div>
      <div class="content">
        <h1 class="header"><%= @stock.Name %></h1>
        <div class="meta">
          <span class="cinema"><%= @stock.Symbol %></span>
        </div>
        <div class="meta">
          <span class="version">Exchange: <%= @stock.Exchange %></span>
        </div>
        <div class="meta">
          <span class="release">Sector: <%= @stock.Sector %></span>
        </div>
	<div class="meta">
          <span class="release">Industry: <%= @stock.Industry %></span>
        </div>
	<div class="meta">
          <span class="release">IPO Year: <%= @stock.IPOyear %></span>
        </div>
	<div class="meta">
          <span class="link">URL: <%= @stock.SummaryQuote %></span>
        </div
        <div class="bottom aligned content">
          <button class="ui primary button" disabled>30 Day Quotes</button>
        </div>
      </div>
    </div>
  </div>
  <div class="ui divider"></div>
  <div class="ui three small statistics">
    <div class="statistic">
      <div class="value">
        <i class="small green arrow alternate circle outline icon"></i> <%= number_to_human @stock.MarketCap %>
      </div>
      <div class="label">
        MarketCap
      </div>
    </div>
    <div class="statistic">
      <div class="value">
        <i class="small yellow star icon"></i> <%= @stock.LastSale %>
      </div>
      <div class="label">
        Last Sale
      </div>
    </div>
  </div>
  <div class="ui divider"></div>
  <h2 class="header">Chart</h2>
  <div style="overflow-x: scroll; display: flex;">
    <img src="https://dummyimage.com/420x320/ff7f7f/333333.png&text=Sample 1" >
  </div>
</div>
